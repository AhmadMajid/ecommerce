<% content_for(:title, "Categories") %>
<% content_for(:description, "Browse our product categories") %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Page Header -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Shop by Category</h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
      Explore our wide range of product categories and find exactly what you're looking for.
    </p>
  </div>

  <!-- Categories Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @categories.each do |category| %>
      <div class="group relative bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-lg transition-all duration-300">
        <%= link_to category_path(category), class: "block" do %>
          <!-- Category Image -->
          <div class="aspect-w-16 aspect-h-9 bg-gray-200">
            <% if category.image.attached? %>
              <%= image_tag category.image,
                  class: "w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300",
                  alt: category.name %>
            <% else %>
              <div class="w-full h-48 bg-gradient-to-br from-indigo-400 to-purple-500 flex items-center justify-center">
                <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
              </div>
            <% end %>
          </div>

          <!-- Category Info -->
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-indigo-600 transition-colors">
              <%= category.name %>
            </h3>

            <% if category.description.present? %>
              <p class="text-gray-600 mb-4 line-clamp-2">
                <%= category.description %>
              </p>
            <% end %>

            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">
                <%= pluralize(category.products_count, 'product') %>
              </span>

              <svg class="w-5 h-5 text-gray-400 group-hover:text-indigo-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        <% end %>

        <!-- Subcategories -->
        <% if category.children.active.any? %>
          <div class="px-6 pb-6">
            <h4 class="text-sm font-medium text-gray-700 mb-2">Subcategories:</h4>
            <div class="flex flex-wrap gap-1">
              <% category.children.active.limit(4).each do |subcategory| %>
                <%= link_to subcategory.name, category_path(subcategory),
                    class: "inline-block bg-gray-100 text-gray-700 px-2 py-1 rounded text-xs hover:bg-indigo-100 hover:text-indigo-700 transition-colors" %>
              <% end %>

              <% if category.children.active.count > 4 %>
                <span class="inline-block text-gray-500 px-2 py-1 text-xs">
                  +<%= category.children.active.count - 4 %> more
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Featured Collections -->
  <div class="mt-16">
    <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">Featured Collections</h2>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Placeholder for featured collections -->
      <div class="relative bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg overflow-hidden">
        <div class="absolute inset-0 bg-black bg-opacity-40"></div>
        <div class="relative p-8 text-white">
          <h3 class="text-2xl font-bold mb-2">New Arrivals</h3>
          <p class="text-blue-100 mb-4">Check out our latest products</p>
          <%= link_to "Shop Now", products_path(sort: 'newest'),
              class: "btn bg-white text-blue-600 hover:bg-gray-100" %>
        </div>
      </div>

      <div class="relative bg-gradient-to-r from-green-500 to-teal-600 rounded-lg overflow-hidden">
        <div class="absolute inset-0 bg-black bg-opacity-40"></div>
        <div class="relative p-8 text-white">
          <h3 class="text-2xl font-bold mb-2">Best Sellers</h3>
          <p class="text-green-100 mb-4">Our most popular products</p>
          <%= link_to "Shop Now", products_path(sort: 'featured'),
              class: "btn bg-white text-green-600 hover:bg-gray-100" %>
        </div>
      </div>
    </div>
  </div>
</div>
