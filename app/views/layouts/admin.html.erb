<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) + " - " : "" %>Admin - EcommerceStore</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <style>
      /* Custom admin styles */
      .admin-sidebar {
        min-height: calc(100vh - 4rem);
      }

      .admin-content {
        min-height: calc(100vh - 4rem);
      }
    </style>
  </head>

  <body class="bg-gray-100">
    <!-- Admin Header -->
    <header class="bg-white shadow-sm border-b">
      <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <!-- Logo and Admin Title -->
          <div class="flex items-center">
            <%= link_to admin_root_path, class: "flex items-center space-x-3" do %>
              <div class="w-8 h-8 bg-indigo-600 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <span class="text-xl font-bold text-gray-900">Admin Panel</span>
                <span class="text-sm text-gray-500 block">EcommerceStore</span>
              </div>
            <% end %>
          </div>

          <!-- Admin User Menu -->
          <div class="flex items-center space-x-4">
            <%= link_to root_path, target: '_blank',
                class: "text-gray-600 hover:text-indigo-600 text-sm font-medium" do %>
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              View Store
            <% end %>

            <div class="flex items-center space-x-2">
              <div class="w-8 h-8 bg-indigo-100 rounded-full flex items-center justify-center">
                <span class="text-indigo-600 font-medium text-sm">
                  <%= current_user.first_name&.first&.upcase || current_user.email.first.upcase %>
                </span>
              </div>
              <span class="text-gray-700 text-sm font-medium">
                <%= current_user.first_name || current_user.email.split('@').first %>
              </span>
            </div>

            <%= link_to destroy_user_session_path, method: :delete,
                class: "text-gray-600 hover:text-red-600 text-sm font-medium" do %>
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              Logout
            <% end %>
          </div>
        </div>
      </div>
    </header>

    <div class="flex">
      <!-- Sidebar -->
      <nav class="admin-sidebar w-64 bg-white shadow-sm border-r">
        <div class="p-4 space-y-2">
          <!-- Dashboard -->
          <%= link_to admin_root_path,
              class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{current_page?(admin_root_path) ? 'bg-indigo-100 text-indigo-700' : 'text-gray-700 hover:bg-gray-100'}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
            </svg>
            Dashboard
          <% end %>

          <!-- Products -->
          <%= link_to admin_products_path,
              class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{controller_name == 'products' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-700 hover:bg-gray-100'}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
            Products
            <% if (@low_stock_count = Product.low_stock.count) > 0 %>
              <span class="ml-auto bg-red-100 text-red-600 text-xs px-2 py-1 rounded-full">
                <%= @low_stock_count %>
              </span>
            <% end %>
          <% end %>

          <!-- Categories -->
          <%= link_to admin_categories_path,
              class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{controller_name == 'categories' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-700 hover:bg-gray-100'}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            Categories
          <% end %>

          <!-- Orders (placeholder for future) -->
          <a href="#" class="flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-400 cursor-not-allowed">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            Orders
            <span class="ml-auto text-xs">(Soon)</span>
          </a>

          <!-- Users (placeholder for future) -->
          <a href="#" class="flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-400 cursor-not-allowed">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
            Users
            <span class="ml-auto text-xs">(Soon)</span>
          </a>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="admin-content flex-1 p-6">
        <!-- Breadcrumbs -->
        <% if @breadcrumb&.any? %>
          <nav class="mb-6" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-2 text-sm text-gray-500">
              <% @breadcrumb.each_with_index do |crumb, index| %>
                <li class="flex items-center">
                  <% if index > 0 %>
                    <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  <% end %>
                  <% if crumb[:path] %>
                    <%= link_to crumb[:name], crumb[:path], class: "hover:text-gray-700" %>
                  <% else %>
                    <span class="text-gray-900 font-medium"><%= crumb[:name] %></span>
                  <% end %>
                </li>
              <% end %>
            </ol>
          </nav>
        <% end %>

        <!-- Flash Messages -->
        <% if notice || alert %>
          <div class="mb-6">
            <% if notice %>
              <%= render 'shared/alert', message: notice, type: 'success', dismissible: true %>
            <% end %>

            <% if alert %>
              <%= render 'shared/alert', message: alert, type: 'error', dismissible: true %>
            <% end %>
          </div>
        <% end %>

        <!-- Page Content -->
        <%= yield %>
      </main>
    </div>
  </body>
</html>
