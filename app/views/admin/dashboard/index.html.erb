<% content_for(:title, "Dashboard") %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total Products -->
  <%= render 'shared/card', classes: 'bg-gradient-to-r from-blue-500 to-blue-600 text-white' do %>
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <svg class="w-8 h-8 text-blue-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-blue-200 text-sm">Total Products</p>
        <p class="text-2xl font-bold"><%= @stats[:products_count] %></p>
      </div>
    </div>
  <% end %>

  <!-- Active Products -->
  <%= render 'shared/card', classes: 'bg-gradient-to-r from-green-500 to-green-600 text-white' do %>
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <svg class="w-8 h-8 text-green-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-green-200 text-sm">Active Products</p>
        <p class="text-2xl font-bold"><%= @stats[:active_products_count] %></p>
      </div>
    </div>
  <% end %>

  <!-- Categories -->
  <%= render 'shared/card', classes: 'bg-gradient-to-r from-purple-500 to-purple-600 text-white' do %>
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <svg class="w-8 h-8 text-purple-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-purple-200 text-sm">Categories</p>
        <p class="text-2xl font-bold"><%= @stats[:categories_count] %></p>
      </div>
    </div>
  <% end %>

  <!-- Low Stock Alert -->
  <%= render 'shared/card', classes: 'bg-gradient-to-r from-red-500 to-red-600 text-white' do %>
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <svg class="w-8 h-8 text-red-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.99-.833-2.72 0L4.268 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-red-200 text-sm">Low Stock Items</p>
        <p class="text-2xl font-bold"><%= @stats[:low_stock_products] %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <!-- Recent Products -->
  <%= render 'shared/card', header: 'Recent Products' do %>
    <% if @recent_products.any? %>
      <div class="space-y-4">
        <% @recent_products.each do |product| %>
          <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-b-0">
            <div class="flex items-center space-x-3">
              <% if product.primary_image %>
                <%= image_tag product.primary_image,
                    class: "w-10 h-10 rounded object-cover",
                    alt: product.name %>
              <% else %>
                <div class="w-10 h-10 bg-gray-200 rounded flex items-center justify-center">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
              <% end %>
              <div>
                <p class="font-medium text-gray-900"><%= product.name %></p>
                <p class="text-sm text-gray-500"><%= product.category.name %></p>
              </div>
            </div>
            <div class="text-right">
              <p class="font-medium text-gray-900">$<%= product.price %></p>
              <%= render 'shared/badge',
                  text: product.active? ? 'Active' : 'Inactive',
                  type: product.active? ? 'success' : 'gray' %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="mt-4 pt-4 border-t">
        <%= render 'shared/button',
            text: 'View All Products',
            type: 'outline-primary',
            link: admin_products_path %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
        </svg>
        <p class="text-gray-500 mb-4">No products yet</p>
        <%= render 'shared/button',
            text: 'Add First Product',
            type: 'primary',
            link: new_admin_product_path %>
      </div>
    <% end %>
  <% end %>

  <!-- Low Stock Alert -->
  <%= render 'shared/card', header: 'Low Stock Alert' do %>
    <% if @low_stock_products.any? %>
      <div class="space-y-4">
        <% @low_stock_products.each do |product| %>
          <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-b-0">
            <div class="flex items-center space-x-3">
              <% if product.primary_image %>
                <%= image_tag product.primary_image,
                    class: "w-10 h-10 rounded object-cover",
                    alt: product.name %>
              <% else %>
                <div class="w-10 h-10 bg-gray-200 rounded flex items-center justify-center">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
              <% end %>
              <div>
                <p class="font-medium text-gray-900"><%= product.name %></p>
                <p class="text-sm text-gray-500"><%= product.category.name %></p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-sm text-red-600 font-medium">
                <%= product.inventory_quantity %> left
              </p>
              <p class="text-xs text-gray-500">
                Threshold: <%= product.low_stock_threshold %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="mt-4 pt-4 border-t">
        <%= render 'shared/button',
            text: 'View All Low Stock',
            type: 'outline-primary',
            link: admin_products_path(stock_status: 'low_stock') %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <svg class="w-12 h-12 text-green-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-gray-500">All products are well stocked!</p>
      </div>
    <% end %>
  <% end %>
</div>

<!-- Quick Actions -->
<div class="mt-8">
  <%= render 'shared/card', header: 'Quick Actions' do %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <%= render 'shared/button',
          text: 'Add New Product',
          type: 'primary',
          link: new_admin_product_path,
          classes: 'w-full justify-center' %>

      <%= render 'shared/button',
          text: 'Add New Category',
          type: 'secondary',
          link: new_admin_category_path,
          classes: 'w-full justify-center' %>

      <%= render 'shared/button',
          text: 'View Store',
          type: 'outline-primary',
          link: root_path,
          classes: 'w-full justify-center',
          data: { turbo: false } %>
    </div>
  <% end %>
</div>
