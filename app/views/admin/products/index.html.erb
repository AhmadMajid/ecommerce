<% content_for(:title, "Products") %>

<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Products</h1>
    <p class="text-gray-600">Manage your product inventory and details</p>
  </div>

  <div class="mt-4 sm:mt-0 flex space-x-2">
    <%= render 'shared/button',
        text: 'Import Products',
        type: 'outline-secondary',
        link: '#',
        data: { action: 'click->admin--bulk#showImportModal' } %>

    <%= render 'shared/button',
        text: 'Export Products',
        type: 'outline-secondary',
        link: admin_products_path(format: :csv) %>

    <%= render 'shared/button',
        text: 'New Product',
        type: 'primary',
        link: new_admin_product_path %>
  </div>
</div>

<!-- Filters and Search -->
<%= render 'shared/card' do %>
  <%= form_with url: admin_products_path, method: :get, local: true,
      class: "grid grid-cols-1 md:grid-cols-5 gap-4" do |form| %>

    <%= render 'shared/form_group', label: 'Search' do %>
      <%= form.text_field :search,
          value: params[:search],
          placeholder: "Search products...",
          class: "form-input" %>
    <% end %>

    <%= render 'shared/form_group', label: 'Category' do %>
      <%= form.select :category_id,
          options_from_collection_for_select(@categories, :id, :name, params[:category_id]),
          { prompt: 'All Categories' },
          { class: "form-select" } %>
    <% end %>

    <%= render 'shared/form_group', label: 'Status' do %>
      <%= form.select :status,
          options_for_select([
            ['All', ''],
            ['Active', 'active'],
            ['Inactive', 'inactive']
          ], params[:status]),
          {},
          { class: "form-select" } %>
    <% end %>

    <%= render 'shared/form_group', label: 'Stock Status' do %>
      <%= form.select :stock_status,
          options_for_select([
            ['All', ''],
            ['In Stock', 'in_stock'],
            ['Low Stock', 'low_stock'],
            ['Out of Stock', 'out_of_stock']
          ], params[:stock_status]),
          {},
          { class: "form-select" } %>
    <% end %>

    <div class="flex items-end space-x-2">
      <%= render 'shared/button', text: 'Filter', type: 'primary', submit: true %>
      <%= link_to 'Clear', admin_products_path,
          class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
<% end %>

<!-- Bulk Actions -->
<% if @products.any? %>
  <div class="mb-4" data-admin--bulk-target="actionsBar" style="display: none;">
    <%= render 'shared/card' do %>
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span class="text-sm text-gray-600">
            <span data-admin--bulk-target="selectedCount">0</span> products selected
          </span>
        </div>

        <div class="flex space-x-2">
          <%= render 'shared/button',
              text: 'Activate Selected',
              type: 'outline-success',
              data: { action: 'click->admin--bulk#activateSelected' } %>

          <%= render 'shared/button',
              text: 'Deactivate Selected',
              type: 'outline-secondary',
              data: { action: 'click->admin--bulk#deactivateSelected' } %>

          <%= render 'shared/button',
              text: 'Update Category',
              type: 'outline-primary',
              data: { action: 'click->admin--bulk#showCategoryModal' } %>

          <%= render 'shared/button',
              text: 'Delete Selected',
              type: 'outline-danger',
              data: {
                action: 'click->admin--bulk#deleteSelected',
                confirm: 'Are you sure? This action cannot be undone.'
              } %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<!-- Products Table -->
<%= render 'shared/card' do %>
  <% if @products.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <input type="checkbox"
                     class="form-checkbox"
                     data-action="change->admin--bulk#toggleAll"
                     data-admin--bulk-target="selectAll">
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Product
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Category
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Price
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Stock
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Status
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Updated
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @products.each do |product| %>
            <tr class="hover:bg-gray-50" data-admin--bulk-target="row">
              <td class="px-6 py-4 whitespace-nowrap">
                <input type="checkbox"
                       class="form-checkbox"
                       value="<%= product.id %>"
                       data-action="change->admin--bulk#toggleRow"
                       data-admin--bulk-target="rowCheckbox">
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <% if product.primary_image %>
                    <%= image_tag product.primary_image,
                        class: "w-12 h-12 rounded object-cover mr-3",
                        alt: product.name %>
                  <% else %>
                    <div class="w-12 h-12 bg-gray-200 rounded mr-3 flex items-center justify-center">
                      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                  <% end %>

                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= product.name %>
                      <% if product.featured? %>
                        <%= render 'shared/badge', text: 'Featured', type: 'primary', size: 'small' %>
                      <% end %>
                    </div>
                    <div class="text-sm text-gray-500">
                      SKU: <%= product.sku || 'N/A' %>
                    </div>
                    <% if product.short_description.present? %>
                      <div class="text-sm text-gray-500">
                        <%= truncate(product.short_description, length: 40) %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <span class="text-blue-600 hover:text-blue-800">
                  <%= link_to product.category.name, admin_category_path(product.category) %>
                </span>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <div>
                  <span class="font-medium">$<%= product.price %></span>
                  <% if product.compare_at_price && product.compare_at_price > product.price %>
                    <div class="text-gray-500 line-through text-xs">
                      $<%= product.compare_at_price %>
                    </div>
                  <% end %>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% if product.track_inventory? %>
                  <div class="<%= product.stock_status == 'out_of_stock' ? 'text-red-600' :
                                 product.stock_status == 'low_stock' ? 'text-yellow-600' :
                                 'text-green-600' %>">
                    <%= product.inventory_quantity %>
                    <% if product.stock_status == 'low_stock' %>
                      <span class="text-xs">(Low)</span>
                    <% elsif product.stock_status == 'out_of_stock' %>
                      <span class="text-xs">(Out)</span>
                    <% end %>
                  </div>
                <% else %>
                  <span class="text-gray-500">Not tracked</span>
                <% end %>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <%= render 'shared/badge',
                    text: product.active? ? 'Active' : 'Inactive',
                    type: product.active? ? 'success' : 'gray' %>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= time_ago_in_words(product.updated_at) %> ago
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex items-center justify-end space-x-2">
                  <%= link_to admin_product_path(product),
                      class: "text-blue-600 hover:text-blue-900",
                      title: "View Product" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  <% end %>

                  <%= link_to edit_admin_product_path(product),
                      class: "text-indigo-600 hover:text-indigo-900",
                      title: "Edit Product" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>

                  <%= link_to duplicate_admin_product_path(product),
                      method: :post,
                      class: "text-green-600 hover:text-green-900",
                      title: "Duplicate Product" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                  <% end %>

                  <%= link_to admin_product_path(product),
                      method: :delete,
                      class: "text-red-600 hover:text-red-900",
                      title: "Delete Product",
                      data: {
                        confirm: "Are you sure? This action cannot be undone."
                      } do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if respond_to?(:paginate) %>
      <div class="mt-6 flex justify-center">
        <%= paginate @products, theme: 'twitter_bootstrap_4' %>
      </div>
    <% end %>

  <% else %>
    <div class="text-center py-12">
      <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No products found</h3>
      <p class="text-gray-500 mb-4">
        <% if params[:search].present? || params[:category_id].present? || params[:status].present? %>
          Try adjusting your filters or search terms.
        <% else %>
          Get started by creating your first product.
        <% end %>
      </p>
      <% unless params[:search].present? || params[:category_id].present? || params[:status].present? %>
        <%= render 'shared/button',
            text: 'Create Product',
            type: 'primary',
            link: new_admin_product_path %>
      <% end %>
    </div>
  <% end %>
<% end %>
