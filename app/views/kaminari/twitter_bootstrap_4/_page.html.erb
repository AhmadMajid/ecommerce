<% if page.current? %>
  <li>
    <span class="z-10 px-3 py-2 leading-tight text-blue-600 border border-blue-300 bg-blue-50"><%= page %></span>
  </li>
<% else %>
  <li>
    <%= link_to page, url, remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)), class: 'px-3 py-2 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700' %>
  </li>
<% end %>
