<%# Form Select Component
  Usage: <%= render 'shared/form_select', name: 'category', label: 'Category', options: [['Option 1', 1], ['Option 2', 2]] %>

  Parameters:
  - name: Select name attribute (required)
  - label: Select label
  - options: Array of [text, value] pairs (required)
  - selected: Selected value
  - required: Boolean - whether field is required
  - error: Error message to display
  - prompt: Prompt text for first option
  - classes: Additional CSS classes
%>

<div class="mb-4">
  <% if local_assigns[:label].present? %>
    <label for="<%= local_assigns[:name] %>" class="block text-sm font-medium text-gray-700 mb-1">
      <%= local_assigns[:label] %>
      <% if local_assigns[:required] %>
        <span class="text-red-500">*</span>
      <% end %>
    </label>
  <% end %>

  <select
    name="<%= local_assigns[:name] %>"
    id="<%= local_assigns[:name] %>"
    <% if local_assigns[:required] %>required<% end %>
    class="block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 bg-white <%= local_assigns[:error].present? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : '' %> <%= local_assigns[:classes] %>"
  >
    <% if local_assigns[:prompt].present? %>
      <option value=""><%= local_assigns[:prompt] %></option>
    <% end %>

    <% local_assigns[:options].each do |option| %>
      <option value="<%= option[1] %>" <%= 'selected' if local_assigns[:selected] == option[1].to_s %>>
        <%= option[0] %>
      </option>
    <% end %>
  </select>

  <% if local_assigns[:error].present? %>
    <p class="text-red-600 text-sm mt-1"><%= local_assigns[:error] %></p>
  <% end %>
</div>
