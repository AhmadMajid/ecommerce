<!-- Mini Cart Dropdown -->
<div class="relative" data-controller="mini-cart cart">
  <!-- Cart Icon with Count -->
  <button type="button"
          data-action="click->mini-cart#toggle"
          class="relative p-2 text-gray-600 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-md">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M16 11V7a4 4 0 00-8 0v4M5 9h14l-1 12H6L5 9z"></path>
    </svg>

    <% if cart.item_count > 0 %>
      <span class="absolute -top-1 -right-1 bg-blue-600 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center font-medium"
            data-cart-count>
        <%= cart.item_count %>
      </span>
    <% end %>
  </button>

  <!-- Dropdown Panel -->
  <div class="absolute right-0 mt-2 w-80 bg-white rounded-lg shadow-lg border border-gray-200 z-50 hidden"
       data-mini-cart-target="panel">
    <div class="p-4">
      <div class="flex items-center justify-between mb-3">
        <h3 class="text-lg font-medium text-gray-900">Shopping Cart</h3>
        <button type="button"
                data-action="click->mini-cart#close"
                class="text-gray-400 hover:text-gray-600">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>

      <% if cart.empty? %>
        <!-- Empty State -->
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M16 11V7a4 4 0 00-8 0v4M5 9h14l-1 12H6L5 9z"></path>
          </svg>
          <p class="mt-2 text-sm text-gray-500">Your cart is empty</p>
          <div class="mt-3">
            <%= link_to "Start Shopping", products_path,
                class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
          </div>
        </div>
      <% else %>
        <!-- Cart Items -->
        <div class="max-h-60 overflow-y-auto">
          <% cart_items.each do |item| %>
            <div class="flex items-center space-x-3 py-2 border-b border-gray-100 last:border-b-0">
              <!-- Product Image -->
              <div class="flex-shrink-0 w-12 h-12">
                <% if item.product.images.attached? %>
                  <%= image_tag item.product.images.first,
                      class: "w-full h-full object-cover rounded",
                      alt: item.product.name %>
                <% else %>
                  <div class="w-full h-full bg-gray-200 rounded flex items-center justify-center">
                    <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                <% end %>
              </div>

              <!-- Product Details -->
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= item.product.name %>
                </p>
                <div class="flex items-center justify-between">
                  <p class="text-xs text-gray-500">Qty: <%= item.quantity %></p>
                  <p class="text-sm font-medium text-gray-900">
                    <%= number_to_currency(item.total_price) %>
                  </p>
                </div>
              </div>

              <!-- Remove Button -->
              <button type="button"
                      data-action="click->cart#removeItem"
                      data-cart-item-id="<%= item.id %>"
                      class="ml-2 text-red-400 hover:text-red-600 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              </button>
            </div>
          <% end %>
        </div>

        <!-- Cart Summary -->
        <div class="mt-4 pt-4 border-t border-gray-200">
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">Subtotal (<%= cart.item_count %> items)</span>
            <span class="font-medium"><%= number_to_currency(cart.subtotal) %></span>
          </div>

          <% if cart.tax_amount > 0 %>
            <div class="flex justify-between text-sm mt-1">
              <span class="text-gray-600">Tax</span>
              <span><%= number_to_currency(cart.tax_amount) %></span>
            </div>
          <% end %>

          <% if cart.shipping_amount > 0 %>
            <div class="flex justify-between text-sm mt-1">
              <span class="text-gray-600">Shipping</span>
              <span><%= number_to_currency(cart.shipping_amount) %></span>
            </div>
          <% end %>

          <div class="flex justify-between text-base font-medium text-gray-900 mt-2 pt-2 border-t border-gray-200">
            <span>Total</span>
            <span><%= number_to_currency(cart.total) %></span>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-4 space-y-2">
          <%= link_to cart_path,
              class: "w-full btn btn-outline text-center block text-sm py-2" do %>
            View Cart
          <% end %>
          <%= link_to "#",
              class: "w-full btn btn-primary text-center block text-sm py-2" do %>
            Checkout
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
