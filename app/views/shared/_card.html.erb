<%# Card Component
  Usage:
  render 'shared/card', header: 'Card Title', classes: 'mb-6' do
    Card content goes here
  end

  Parameters:
  - header: Card header text (optional)
  - classes: Additional CSS classes for the card
  - body_classes: Additional CSS classes for the card body
  - footer: Footer content (optional)
%>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden <%= local_assigns[:classes] %>">
  <% if local_assigns[:header].present? %>
    <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
      <h3 class="text-lg font-medium text-gray-900"><%= local_assigns[:header] %></h3>
    </div>
  <% end %>

  <div class="px-6 py-4 <%= local_assigns[:body_classes] %>">
    <%= yield %>
  </div>

  <% if local_assigns[:footer].present? %>
    <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
      <%= local_assigns[:footer] %>
    </div>
  <% end %>
</div>
