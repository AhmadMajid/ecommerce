<% badge_type = local_assigns[:type] || 'gray' %>
<% badge_classes = "inline-block px-2 py-0.5 rounded-full text-xs font-semibold " %>
<% badge_classes += case badge_type
  when 'primary' then 'bg-indigo-100 text-indigo-800'
  when 'success' then 'bg-green-100 text-green-800'
  when 'warning' then 'bg-yellow-100 text-yellow-800'
  when 'danger' then 'bg-red-100 text-red-800'
  else 'bg-gray-100 text-gray-800'
end %>
<% badge_classes += " #{local_assigns[:classes]}" if local_assigns[:classes] %>
<span class="<%= badge_classes %>"><%= local_assigns[:text] %></span>
