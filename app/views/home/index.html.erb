<!-- Featured Products Section -->
<% if @featured_products.any? %>
<section class="py-12 lg:py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-8 lg:mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-3 lg:mb-4">
        Featured
        <span class="bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent">
          Collection
        </span>
      </h2>
      <p class="text-lg lg:text-xl text-gray-600 max-w-3xl mx-auto">
        Discover our hand-picked selection of premium products that define modern style and quality.
      </p>
    </div>

    <!-- Products Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 lg:gap-8">
      <% @featured_products.each do |product| %>
        <div class="group relative bg-white rounded-xl lg:rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 overflow-hidden">
          <!-- Sale Badge -->
          <% if product.on_sale? %>
            <div class="absolute top-3 left-3 lg:top-4 lg:left-4 z-10">
              <span class="bg-gradient-to-r from-red-500 to-pink-500 text-white text-xs font-bold px-2 py-1 lg:px-3 lg:py-1 rounded-full">
                SAVE <%= product.sale_percentage %>%
              </span>
            </div>
          <% end %>

          <!-- Product Image -->
          <%= link_to product_path(product.slug), class: "block" do %>
            <div class="aspect-square bg-gray-100 overflow-hidden rounded-t-xl lg:rounded-t-2xl">
              <% if product.images.any? %>
                <%= image_tag product.images.first,
                    class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-700",
                    alt: product.name %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center">
                  <svg class="w-12 h-12 lg:w-16 lg:h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- Product Info -->
          <div class="p-4 lg:p-6">
            <!-- Category -->
            <span class="text-xs font-medium text-purple-600 uppercase tracking-wider">
              <%= product.category.name %>
            </span>

            <!-- Product Name -->
            <h3 class="font-bold text-gray-900 mt-2 mb-2 text-base lg:text-lg group-hover:text-purple-600 transition-colors">
              <%= link_to truncate(product.name, length: 40), product_path(product.slug) %>
            </h3>

            <!-- Description -->
            <% if product.short_description.present? %>
              <p class="text-gray-600 text-sm mb-3 lg:mb-4 line-clamp-2 leading-relaxed">
                <%= truncate(product.short_description, length: 60) %>
              </p>
            <% end %>

            <!-- Price and Add to Cart -->
            <div class="flex items-center justify-between gap-3">
              <div class="flex flex-col">
                <div class="flex items-center space-x-2">
                  <span class="text-xl lg:text-2xl font-bold text-gray-900">$<%= product.price %></span>
                  <% if product.compare_at_price && product.compare_at_price > product.price %>
                    <span class="text-sm text-gray-500 line-through">$<%= product.compare_at_price %></span>
                  <% end %>
                </div>

                <!-- Stock Status -->
                <% if product.track_inventory? %>
                  <% case product.stock_status %>
                  <% when 'in_stock' %>
                    <span class="inline-flex items-center text-xs text-green-700 bg-green-100 px-2 py-1 rounded-full mt-1 w-fit">
                      <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1"></span>
                      In Stock
                    </span>
                  <% when 'low_stock' %>
                    <span class="inline-flex items-center text-xs text-yellow-700 bg-yellow-100 px-2 py-1 rounded-full mt-1 w-fit">
                      <span class="w-1.5 h-1.5 bg-yellow-500 rounded-full mr-1"></span>
                      Low Stock
                    </span>
                  <% when 'out_of_stock' %>
                    <span class="inline-flex items-center text-xs text-red-700 bg-red-100 px-2 py-1 rounded-full mt-1 w-fit">
                      <span class="w-1.5 h-1.5 bg-red-500 rounded-full mr-1"></span>
                      Out of Stock
                    </span>
                  <% end %>
                <% end %>
              </div>

              <!-- Quick Add Button -->
              <% unless product.track_inventory? && product.stock_status == 'out_of_stock' %>
                              <!-- Quick Add Button -->
                <%= form_with url: cart_items_path, local: false, class: "inline-block", data: { controller: "cart", cart_product_id_value: product.id, action: "submit->cart#addToCart" } do |f| %>
                  <%= hidden_field_tag :product_id, product.id %>
                  <%= hidden_field_tag :quantity, 1 %>
                  <%= f.button type: "submit", class: "group/btn bg-gradient-to-r from-purple-600 to-blue-600 text-white p-2.5 lg:p-3 rounded-lg lg:rounded-xl hover:from-purple-700 hover:to-blue-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105", title: "Add to Cart" do %>
                    <svg class="w-4 h-4 lg:w-5 lg:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.5 6M7 13l-1.5 6m0 0h9m-9 0h9"></path>
                    </svg>
                  <% end %>
                <% end %>
              <% else %>
                <span class="text-red-500 text-xs font-medium bg-red-50 px-2 py-1 rounded">Out of Stock</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- View All Button -->
    <div class="text-center mt-8 lg:mt-12">
      <%= link_to products_path,
          class: "inline-flex items-center px-6 lg:px-8 py-3 lg:py-4 bg-gradient-to-r from-purple-600 to-blue-600 text-white font-semibold rounded-xl hover:from-purple-700 hover:to-blue-700 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl" do %>
        View All Products
        <svg class="ml-2 w-4 h-4 lg:w-5 lg:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      <% end %>
    </div>
  </div>
</section>
<% end %>

