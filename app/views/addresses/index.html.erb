<% content_for :title, "My Addresses" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">My Addresses</h1>
      <p class="mt-2 text-sm text-gray-600">Manage your shipping and billing addresses</p>
    </div>

    <div class="flex space-x-3">
      <%= link_to new_address_path(type: 'shipping'),
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add Shipping Address
      <% end %>

      <%= link_to new_address_path(type: 'billing'),
          class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add Billing Address
      <% end %>
    </div>
  </div>

  <!-- Shipping Addresses Section -->
  <div class="mb-12">
    <h2 class="text-lg font-medium text-gray-900 mb-6 flex items-center">
      <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
      </svg>
      Shipping Addresses
    </h2>

    <% if @shipping_addresses.any? %>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @shipping_addresses.each do |address| %>
          <div class="bg-white overflow-hidden shadow rounded-lg border <%= 'border-indigo-200 bg-indigo-50' if address.default_address? %>">
            <div class="px-4 py-5 sm:p-6">
              <% if address.default_address? %>
                <div class="flex items-center mb-3">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Default
                  </span>
                </div>
              <% end %>

              <div class="space-y-1">
                <p class="text-sm font-medium text-gray-900"><%= address.full_name %></p>
                <% if address.company.present? %>
                  <p class="text-sm text-gray-600"><%= address.company %></p>
                <% end %>
                <p class="text-sm text-gray-600"><%= address.address_line_1 %></p>
                <% if address.address_line_2.present? %>
                  <p class="text-sm text-gray-600"><%= address.address_line_2 %></p>
                <% end %>
                <p class="text-sm text-gray-600">
                  <%= address.city %>, <%= address.state_province %> <%= address.postal_code %>
                </p>
                <p class="text-sm text-gray-600"><%= address.country_name %></p>
                <% if address.phone.present? %>
                  <p class="text-sm text-gray-600">Phone: <%= address.phone %></p>
                <% end %>
              </div>
            </div>

            <div class="bg-gray-50 px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div class="flex space-x-2">
                  <%= link_to edit_address_path(address),
                      class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
                    Edit
                  <% end %>

                  <% unless address.default_address? %>
                    <%= link_to set_default_address_path(address),
                        method: :patch,
                        class: "text-sm font-medium text-green-600 hover:text-green-500" do %>
                      Set Default
                    <% end %>
                  <% end %>
                </div>

                <%= link_to address_path(address),
                    method: :delete,
                    confirm: "Are you sure you want to delete this address?",
                    class: "text-sm font-medium text-red-600 hover:text-red-500" do %>
                  Delete
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No shipping addresses</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by adding your first shipping address.</p>
        <div class="mt-6">
          <%= link_to new_address_path(type: 'shipping'),
              class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Shipping Address
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Billing Addresses Section -->
  <div>
    <h2 class="text-lg font-medium text-gray-900 mb-6 flex items-center">
      <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
      </svg>
      Billing Addresses
    </h2>

    <% if @billing_addresses.any? %>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @billing_addresses.each do |address| %>
          <div class="bg-white overflow-hidden shadow rounded-lg border <%= 'border-green-200 bg-green-50' if address.default_address? %>">
            <div class="px-4 py-5 sm:p-6">
              <% if address.default_address? %>
                <div class="flex items-center mb-3">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Default
                  </span>
                </div>
              <% end %>

              <div class="space-y-1">
                <p class="text-sm font-medium text-gray-900"><%= address.full_name %></p>
                <% if address.company.present? %>
                  <p class="text-sm text-gray-600"><%= address.company %></p>
                <% end %>
                <p class="text-sm text-gray-600"><%= address.address_line_1 %></p>
                <% if address.address_line_2.present? %>
                  <p class="text-sm text-gray-600"><%= address.address_line_2 %></p>
                <% end %>
                <p class="text-sm text-gray-600">
                  <%= address.city %>, <%= address.state_province %> <%= address.postal_code %>
                </p>
                <p class="text-sm text-gray-600"><%= address.country_name %></p>
                <% if address.phone.present? %>
                  <p class="text-sm text-gray-600">Phone: <%= address.phone %></p>
                <% end %>
              </div>
            </div>

            <div class="bg-gray-50 px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div class="flex space-x-2">
                  <%= link_to edit_address_path(address),
                      class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
                    Edit
                  <% end %>

                  <% unless address.default_address? %>
                    <%= link_to set_default_address_path(address),
                        method: :patch,
                        class: "text-sm font-medium text-green-600 hover:text-green-500" do %>
                      Set Default
                    <% end %>
                  <% end %>
                </div>

                <%= link_to address_path(address),
                    method: :delete,
                    confirm: "Are you sure you want to delete this address?",
                    class: "text-sm font-medium text-red-600 hover:text-red-500" do %>
                  Delete
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No billing addresses</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by adding your first billing address.</p>
        <div class="mt-6">
          <%= link_to new_address_path(type: 'billing'),
              class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Billing Address
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
