<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Create your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Or
        <%= link_to "sign in to your existing account", new_user_session_path,
            class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </p>
    </div>

    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name),
                  local: true, class: "mt-8 space-y-6" do |f| %>

      <div class="rounded-md shadow-sm space-y-4">
        <!-- First Name -->
        <div>
          <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :first_name,
              class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
              placeholder: "First name",
              required: true,
              autofocus: true %>
          <% if resource.errors[:first_name].any? %>
            <p class="mt-1 text-sm text-red-600"><%= resource.errors[:first_name].first %></p>
          <% end %>
        </div>

        <!-- Last Name -->
        <div>
          <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :last_name,
              class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
              placeholder: "Last name",
              required: true %>
          <% if resource.errors[:last_name].any? %>
            <p class="mt-1 text-sm text-red-600"><%= resource.errors[:last_name].first %></p>
          <% end %>
        </div>

        <!-- Email -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email,
              class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
              placeholder: "Email address",
              required: true %>
          <% if resource.errors[:email].any? %>
            <p class="mt-1 text-sm text-red-600"><%= resource.errors[:email].first %></p>
          <% end %>
        </div>

        <!-- Phone -->
        <div>
          <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
          <%= f.telephone_field :phone,
              class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
              placeholder: "Phone number (optional)" %>
          <% if resource.errors[:phone].any? %>
            <p class="mt-1 text-sm text-red-600"><%= resource.errors[:phone].first %></p>
          <% end %>
        </div>

        <!-- Date of Birth -->
        <div>
          <%= f.label :date_of_birth, class: "block text-sm font-medium text-gray-700" %>
          <%= f.date_field :date_of_birth,
              class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
          <% if resource.errors[:date_of_birth].any? %>
            <p class="mt-1 text-sm text-red-600"><%= resource.errors[:date_of_birth].first %></p>
          <% end %>
        </div>

        <!-- Password -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password,
              class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
              placeholder: "Password",
              required: true %>
          <% if resource.errors[:password].any? %>
            <p class="mt-1 text-sm text-red-600"><%= resource.errors[:password].first %></p>
          <% else %>
            <p class="mt-1 text-sm text-gray-500">
              <%= @minimum_password_length %> characters minimum
            </p>
          <% end %>
        </div>

        <!-- Password Confirmation -->
        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation,
              class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
              placeholder: "Confirm password",
              required: true %>
          <% if resource.errors[:password_confirmation].any? %>
            <p class="mt-1 text-sm text-red-600"><%= resource.errors[:password_confirmation].first %></p>
          <% end %>
        </div>
      </div>

      <!-- Terms and Privacy -->
      <div class="flex items-center">
        <input type="checkbox" required
               class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
        <label class="ml-2 block text-sm text-gray-900">
          I agree to the
          <%= link_to "Terms of Service", "#", class: "text-indigo-600 hover:text-indigo-500" %>
          and
          <%= link_to "Privacy Policy", "#", class: "text-indigo-600 hover:text-indigo-500" %>
        </label>
      </div>

      <!-- Submit Button -->
      <div>
        <%= f.submit "Create Account",
            class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
      </div>

      <!-- Additional Links -->
      <div class="text-center space-y-2">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
