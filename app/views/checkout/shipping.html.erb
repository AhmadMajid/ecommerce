<% content_for :title, "Checkout - Shipping Information" %>

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Checkout Progress Indicator -->
  <div class="mb-8">
    <div class="flex items-center justify-center">
      <div class="flex items-center space-x-4">
        <!-- Shipping Step -->
        <div class="flex items-center">
          <div class="flex items-center justify-center w-8 h-8 bg-indigo-600 text-white rounded-full">
            <span class="text-sm font-medium">1</span>
          </div>
          <span class="ml-2 text-sm font-medium text-indigo-600">Shipping</span>
        </div>

        <!-- Arrow -->
        <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>

        <!-- Payment Step -->
        <div class="flex items-center">
          <div class="flex items-center justify-center w-8 h-8 bg-gray-300 text-gray-500 rounded-full">
            <span class="text-sm font-medium">2</span>
          </div>
          <span class="ml-2 text-sm font-medium text-gray-500">Payment</span>
        </div>

        <!-- Arrow -->
        <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>

        <!-- Review Step -->
        <div class="flex items-center">
          <div class="flex items-center justify-center w-8 h-8 bg-gray-300 text-gray-500 rounded-full">
            <span class="text-sm font-medium">3</span>
          </div>
          <span class="ml-2 text-sm font-medium text-gray-500">Review</span>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Checkout Form -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Shipping Information</h2>
          <p class="mt-1 text-sm text-gray-600">Where should we deliver your order?</p>
        </div>

        <% if current_user.addresses.shipping.any? %>
          <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <h3 class="text-base font-medium text-gray-900 mb-3">Use a saved address</h3>
            <div class="grid grid-cols-1 gap-3 sm:grid-cols-2">
              <% current_user.addresses.shipping.each do |address| %>
                <div class="relative">
                  <button type="button" 
                          class="use-saved-address w-full p-3 text-left border rounded-lg hover:bg-white hover:border-indigo-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors <%= 'border-indigo-300 bg-white' if address.default_address? %>"
                          data-address='<%= {
                            first_name: address.first_name,
                            last_name: address.last_name,
                            company: address.company,
                            phone: address.phone,
                            address_line_1: address.address_line_1,
                            address_line_2: address.address_line_2,
                            city: address.city,
                            state_province: address.state_province,
                            postal_code: address.postal_code,
                            country: address.country
                          }.to_json %>'>
                    <div class="flex items-start justify-between">
                      <div class="min-w-0 flex-1">
                        <p class="text-sm font-medium text-gray-900"><%= address.full_name %></p>
                        <% if address.company.present? %>
                          <p class="text-sm text-gray-600"><%= address.company %></p>
                        <% end %>
                        <p class="text-sm text-gray-600"><%= address.address_line_1 %></p>
                        <p class="text-sm text-gray-600"><%= address.city %>, <%= address.state_province %> <%= address.postal_code %></p>
                        <p class="text-sm text-gray-600"><%= address.country_name %></p>
                      </div>
                      <% if address.default_address? %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                          Default
                        </span>
                      <% end %>
                    </div>
                  </button>
                </div>
              <% end %>
            </div>
            <div class="mt-3">
              <p class="text-sm text-gray-500">Click on an address to use it, or enter a new address below.</p>
            </div>
          </div>
        <% end %>

        <div class="px-6 py-6">
          <%= form_with url: update_shipping_checkout_index_path, method: :patch, local: true, class: "space-y-6" do |form| %>
            <!-- Contact Information -->
            <div>
              <h3 class="text-base font-medium text-gray-900 mb-4">Contact Information</h3>
              <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
                <div>
                  <%= form.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :first_name, value: @address.first_name,
                      class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                      required: true %>
                </div>

                <div>
                  <%= form.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :last_name, value: @address.last_name,
                      class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                      required: true %>
                </div>

                <div class="sm:col-span-2">
                  <%= form.label :company, "Company (Optional)", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :company, value: @address.company,
                      class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
                </div>

                <div class="sm:col-span-2">
                  <%= form.label :phone, "Phone Number", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.telephone_field :phone, value: @address.phone,
                      class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                      required: true %>
                </div>
              </div>
            </div>

            <!-- Address Information -->
            <div>
              <h3 class="text-base font-medium text-gray-900 mb-4">Address</h3>
              <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
                <div class="sm:col-span-2">
                  <%= form.label :address_line_1, "Address Line 1", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :address_line_1, value: @address.address_line_1,
                      class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                      required: true %>
                </div>

                <div class="sm:col-span-2">
                  <%= form.label :address_line_2, "Address Line 2 (Optional)", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :address_line_2, value: @address.address_line_2,
                      class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
                </div>

                <div>
                  <%= form.label :city, "City", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :city, value: @address.city,
                      class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                      required: true %>
                </div>

                <div>
                  <%= form.label :state_province, "State/Province", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :state_province, value: @address.state_province,
                      class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                      required: true %>
                </div>

                <div>
                  <%= form.label :postal_code, "ZIP/Postal Code", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_field :postal_code, value: @address.postal_code,
                      class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                      required: true %>
                </div>

                <div>
                  <%= form.label :country, "Country", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.select :country,
                      options_for_select(country_options, @address.country),
                      {},
                      { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                        required: true } %>
                </div>
              </div>
            </div>

            <!-- Shipping Methods -->
            <div>
              <h3 class="text-base font-medium text-gray-900 mb-4">Shipping Method</h3>
              <div class="space-y-4">
                <% @shipping_methods.each do |method| %>
                  <div class="relative">
                    <label class="flex items-center p-4 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 focus-within:ring-2 focus-within:ring-indigo-500 focus-within:border-indigo-500">
                      <%= form.radio_button :shipping_method_id, method.id,
                          checked: @checkout.shipping_method_id == method.id,
                          class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
                      <div class="ml-3 flex-1">
                        <div class="flex items-center justify-between">
                          <div>
                            <span class="font-medium text-gray-900"><%= method.name %></span>
                            <p class="text-sm text-gray-500"><%= method.description %></p>
                            <p class="text-xs text-gray-400 mt-1">
                              Estimated delivery: <%= method.delivery_estimate %>
                            </p>
                          </div>
                          <div class="text-right">
                            <span class="font-medium text-gray-900">
                              <% if method.base_cost > 0 %>
                                $<%= number_with_precision(method.calculate_cost(current_cart.total_price), precision: 2) %>
                              <% else %>
                                Free
                              <% end %>
                            </span>
                          </div>
                        </div>
                      </div>
                    </label>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Form Actions -->
            <div class="flex items-center justify-between pt-6 border-t border-gray-200">
              <%= link_to "← Back to Cart", cart_path,
                  class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>

              <%= form.submit "Continue to Payment →",
                  class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Order Summary Sidebar -->
    <div class="lg:col-span-1">
      <%= render 'shared/checkout_order_summary', cart: current_cart, checkout: @checkout %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle saved address selection
  const addressButtons = document.querySelectorAll('.use-saved-address');
  
  addressButtons.forEach(button => {
    button.addEventListener('click', function() {
      const addressData = JSON.parse(this.dataset.address);
      
      // Remove active class from all buttons
      addressButtons.forEach(btn => {
        btn.classList.remove('border-indigo-500', 'ring-2', 'ring-indigo-500', 'bg-indigo-50');
        btn.classList.add('border-gray-300');
      });
      
      // Add active class to clicked button
      this.classList.remove('border-gray-300');
      this.classList.add('border-indigo-500', 'ring-2', 'ring-indigo-500', 'bg-indigo-50');
      
      // Fill the form with address data
      document.querySelector('input[name="address[first_name]"]').value = addressData.first_name || '';
      document.querySelector('input[name="address[last_name]"]').value = addressData.last_name || '';
      document.querySelector('input[name="address[company]"]').value = addressData.company || '';
      document.querySelector('input[name="address[phone]"]').value = addressData.phone || '';
      document.querySelector('input[name="address[address_line_1]"]').value = addressData.address_line_1 || '';
      document.querySelector('input[name="address[address_line_2]"]').value = addressData.address_line_2 || '';
      document.querySelector('input[name="address[city]"]').value = addressData.city || '';
      document.querySelector('input[name="address[state_province]"]').value = addressData.state_province || '';
      document.querySelector('input[name="address[postal_code]"]').value = addressData.postal_code || '';
      document.querySelector('select[name="address[country]"]').value = addressData.country || '';
      
      // Scroll to form
      document.querySelector('form').scrollIntoView({ behavior: 'smooth', block: 'start' });
    });
  });
});
</script>
