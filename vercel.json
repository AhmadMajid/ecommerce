{
  "version": 2,
  "builds": [
    {
      "src": "config.ru",
      "use": "@vercel/ruby"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "config.ru"
    }
  ],
  "env": {
    "RAILS_ENV": "production",
    "RACK_ENV": "production",
    "RAILS_LOG_TO_STDOUT": "true",
    "RAILS_SERVE_STATIC_FILES": "true"
  },
  "functions": {
    "config.ru": {
      "includeFiles": "**",
      "excludeFiles": [
        "node_modules/**",
        ".git/**",
        "tmp/**",
        "log/**",
        "spec/**",
        "test/**"
      ]
    }
  }
}
